@if (SignInManager.IsSignedIn(User))
{
    @section Scripts {
        <script>
            const recipeId = @Model.Id;
            const userId = @userId;

            // ─── Star Rating ───────────────────────────────────────────────────────────
            const stars = document.querySelectorAll('.star-rating span');
            const ratingMessage = document.getElementById('ratingMessage');
            const ratingTitle = document.getElementById('ratingTitle');
            const badgeRatingValue = document.getElementById('badgeRatingValue');
            const badgeRatingCount = document.getElementById('badgeRatingCount');

            // Track the user's committed rating (pre-seeded from server)
            let committedRating = @userRating;

            function applyStarDisplay(rating) {
                stars.forEach((star, index) => {
                    star.classList.toggle('filled', index < rating);
                    star.classList.remove('hovered');
                });
            }

            // Initialise stars with any existing rating
            applyStarDisplay(committedRating);

            // Hover: preview highlighted stars without changing committed state
            stars.forEach(star => {
                star.addEventListener('mouseenter', () => {
                    const hoverRating = parseInt(star.dataset.rating);
                    stars.forEach((s, i) => {
                        s.classList.toggle('hovered', i < hoverRating);
                        s.classList.remove('filled');
                    });
                });
            });

            document.querySelector('.star-rating').addEventListener('mouseleave', () => {
                // Restore to committed rating on mouse-out
                stars.forEach(s => s.classList.remove('hovered'));
                applyStarDisplay(committedRating);
            });

           
            async function submitRating(rating) {
                ratingMessage.textContent = 'Saving…';
                ratingMessage.className = 'rating-message';

                try {
                    const response = await fetch('/Recipe/RateRecipe', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ recipeId, rating })
                    });

                    if (!response.ok) throw new Error('Server error');

                    const data = await response.json();

                    // Update committed state
                    committedRating = rating;
                    applyStarDisplay(committedRating);

                    // Update the live badge in the hero
                    badgeRatingValue.textContent = data.newRating.toFixed(1);
                    badgeRatingCount.textContent = `(${data.newRatingCount})`;

                    // Update UI labels
                    ratingTitle.textContent = 'Your Rating';
                    ratingMessage.textContent = `✓ You rated this ${rating}/5`;
                    ratingMessage.className = 'rating-message success';

                    // Fade the success message after 3 seconds
                    setTimeout(() => {
                        ratingMessage.textContent = 'Click a star to update your rating';
                        ratingMessage.className = 'rating-message';
                    }, 3000);

                } catch (error) {
                    console.error('Error submitting rating:', error);
                    ratingMessage.textContent = 'Failed to save rating. Please try again.';
                    ratingMessage.className = 'rating-message error';
                }
            }

            stars.forEach(star => {
                star.addEventListener('click', async () => {
                    const rating = parseInt(star.dataset.rating);

                    if (rating === committedRating) {
                        await removeRating();
                    } else {
                        await submitRating(rating);
                    }
                });
            });

            async function removeRating() {
                ratingMessage.textContent = 'Removing…';
                ratingMessage.className = 'rating-message';

                try {
                    const response = await fetch('/Recipe/RemoveRating', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ recipeId })
                    });

                    if (!response.ok) throw new Error('Server error');

                    const data = await response.json();

                    committedRating = 0;
                    applyStarDisplay(0);

                    badgeRatingValue.textContent = data.newRating.toFixed(1);
                    badgeRatingCount.textContent = `(${data.newRatingCount})`;

                    ratingTitle.textContent = 'Rate This Recipe';
                    ratingMessage.textContent = 'Your rating has been removed';
                    ratingMessage.className = 'rating-message';

                    setTimeout(() => { ratingMessage.textContent = ''; }, 3000);

                } catch (error) {
                    console.error('Error removing rating:', error);
                    ratingMessage.textContent = 'Failed to remove rating. Please try again.';
                    ratingMessage.className = 'rating-message error';
                }
}

            // ─── Favorite Toggle ───────────────────────────────────────────────────────
            const favoriteBtn = document.getElementById('favoriteBtn');
            const favoriteIcon = document.getElementById('favoriteIcon');
            const favoriteText = document.getElementById('favoriteText');
            
            favoriteBtn.addEventListener('click', async () => {
                try {
                    const response = await fetch('/Recipe/ToggleFavorite', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ recipeId })
                    });
                    
                    const data = await response.json();
                    if (data.isFavorited) {
                        favoriteBtn.classList.add('favorited');
                        favoriteText.textContent = 'Saved to Favorites';
                    } else {
                        favoriteBtn.classList.remove('favorited');
                        favoriteText.textContent = 'Add to Favorites';
                    }
                } catch (error) {
                    console.error('Error toggling favorite:', error);
                }
            });

            // ─── Notes ─────────────────────────────────────────────────────────────────
            const noteText = document.getElementById('noteText');
            const saveNoteBtn = document.getElementById('saveNoteBtn');
            const savedNote = document.getElementById('savedNote');
            const noteContent = document.getElementById('noteContent');
            const noteDate = document.getElementById('noteDate');
            const editNoteBtn = document.getElementById('editNoteBtn');
            const deleteNoteBtn = document.getElementById('deleteNoteBtn');
            
            saveNoteBtn.addEventListener('click', async () => {
                const text = noteText.value.trim();
                if (!text) {
                    alert('Please write a note before saving.');
                    return;
                }
                
                try {
                    const response = await fetch('/Recipe/SaveNote', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ recipeId, noteText: text })
                    });
                    
                    if (response.ok) {
                        const data = await response.json();
                        showSavedNote(text, data.createdAt);
                    }
                } catch (error) {
                    console.error('Error saving note:', error);
                }
            });
            
            function showSavedNote(text, date) {
                noteText.style.display = 'none';
                saveNoteBtn.style.display = 'none';
                savedNote.style.display = 'block';
                noteContent.textContent = text;
                noteDate.textContent = 'Saved on ' + new Date(date).toLocaleDateString('en-US', {
                    year: 'numeric', month: 'long', day: 'numeric'
                });
            }
            
            if (deleteNoteBtn) {
                deleteNoteBtn.addEventListener('click', async () => {
                    if (!confirm('Are you sure you want to delete this note?')) return;

                    try {
                        const response = await fetch('/Recipe/DeleteNote', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ recipeId })
                        });

                        if (response.ok) {
                            savedNote.style.display = 'none';
                            noteText.style.display = 'block';
                            noteText.value = '';
                            saveNoteBtn.style.display = 'block';
                        }
                    } catch (error) {
                        console.error('Error deleting note:', error);
                        alert('Failed to delete note. Please try again.');
                    }
                });
            }
            
            if (editNoteBtn) {
                editNoteBtn.addEventListener('click', () => {
                    noteText.style.display = 'block';
                    saveNoteBtn.style.display = 'block';
                    savedNote.style.display = 'none';
                    noteText.focus();
                });
            }
        </script>
    }
}
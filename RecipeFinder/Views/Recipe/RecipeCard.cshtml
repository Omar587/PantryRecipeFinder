@page
@model RecipeFinder.Views.Recipe.RecipeCard

<div class="recipe-card">
    <a href="/recipes/@Model.Id" class="card-link" aria-label="View @Model.Name">
        <div class="card-image-wrapper">
            <img src="@Model.ImageUrl" alt="@Model.Name" />
            <span class="cuisine-tag">@Model.Cuisine</span>
        </div>

        <div class="card-body">
            <div class="rating-row">
                <span class="stars">‚òÖ @Model.Rating.ToString("0.0")</span>
                <span class="count">(@Model.RatingCount)</span>
            </div>

            <h3 class="recipe-name">@Model.Name</h3>

            <div class="recipe-details">
                <div class="detail-item">
                    <span class="icon">‚è±</span> @Model.TotalTime()m
                </div>
                <div class="detail-item">
                    <span class="icon">üìä</span> @Model.Difficulty
                </div>
            </div>

            @if (Model.Tags.Any())
            {
                <div class="tag-container">
                    @foreach (var tag in Model.Tags.Take(2))
                    {
                        <span class="tag">#@tag.Name</span>
                    }
                </div>
            }
        </div>
    </a>
</div>